generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id Int @id @default(autoincrement())
  uid String @unique
  email String @unique
  password String
  nombre String
  apellido String
  departamento String
  ciudad String
  barrio String
  direccion String
  genero String
  rol  Int
  fechanacimiento  DateTime?
  fecharegistro    DateTime?
}

model marker {
  mar_id        Int    @id @default(autoincrement())
  uid           String  @unique
  mar_name      String
  mar_description String
  routes        route[]
}

model route {
  rout_id        Int     @id @default(autoincrement())
  uid            String  @unique
  rout_name      String
  rout_image     String
  marker         marker  @relation(fields: [rout_marker_fk], references: [mar_id])
  rout_marker_fk Int
}
