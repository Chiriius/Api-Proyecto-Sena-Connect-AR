generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id              Int       @id @default(autoincrement())
  uid             String    @unique
  email           String    @unique
  password        String
  nombre          String
  apellido        String
  departamento    String
  ciudad          String
  barrio          String
  direccion       String
  genero          String
  rol             Int
  fechanacimiento DateTime?
  fecharegistro   DateTime?
}

model marker {
  mar_id          Int    @id @default(autoincrement())
  uid             String @unique
  mar_name        String
  mar_description String
}

model route {
  rout_id    Int     @id @default(autoincrement())
  uid        String  @unique
  rout_name  String
  rout_image String?
  mar_idFK   Int
}

model activity_marker {
  act_id    Int       @id @default(autoincrement())
  mar_idFK  Int        
  scan_date DateTime?
  count     Int
}
